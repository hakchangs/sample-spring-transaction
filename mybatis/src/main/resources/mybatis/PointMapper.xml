<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.example.tx.mybatis.point.mapper.PointMapper" >
    <update id="update" parameterType="org.example.tx.mybatis.point.domain.Point">
        UPDATE point SET
            amount = #{amount}
        WHERE id = #{id}
    </update>
</mapper>